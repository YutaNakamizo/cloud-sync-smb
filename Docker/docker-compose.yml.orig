version: '3'

services:
  samba:
    image: dperson/samba:latest
    environment:
      - TZ=$TZ
      - USERID=$USERID
      - GROUPID=$GROUPID
    command: >
      -u "user;userpassword"
      -g "map to guest = Never"
      -s "root;/share/Root;yes;no;no;user"
      -s "sync_config;/share/sync_config;yes;no;no;user"
      -n
      -p
    volumes:
      - "./data/samba:/share/Root"
      - "./data/sync/config/share:/share/sync_config"
      - "./data/samba/logs:/var/log/samba"
    restart: always
    ports:
      - "${SAMBA_PORT_137}:137/udp"
      - "${SAMBA_PORT_138}:138/udp"
      - "${SAMBA_PORT_139}:139"
      - "${SAMBA_PORT_445}:445"
    networks:
      - samba_net
  sync:
    build: ./sync
    environment:
      - TZ=$TZ
    volumes:
      - "./data/sync/config:/usr/src/sync/config/default"
      - "./data/sync/config/share:/usr/src/sync/config/share"
      - "./data/sync/logs:/var/log/rclone-sync"
    depends_on:
      - samba
    restart: always
    networks:
      - samba_net

networks:
  samba_net:
    driver: bridge

